{
  "manifest_version": 3,
  "name": "LightSession for ChatGPT",
  "version": "1.0.2",
  "description": "Keep ChatGPT fast by keeping only the last N messages in the DOM. Local-only.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "LightSession",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "service_worker": "dist/background.js",
    "preferred_environment": ["service_worker", "document"]
  },
  "web_accessible_resources": [
    {
      "resources": [".dev"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "lightsession@example.com",
      "strict_min_version": "115.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
