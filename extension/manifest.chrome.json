{
  "manifest_version": 3,
  "name": "Trimly for ChatGPT",
  "version": "1.2.1",
  "description": "Trimly - Browser extension to optimize ChatGPT performance",
  "icons": {
    "16": "assets/icons/16x16.png",
    "32": "assets/icons/32x32.png",
    "48": "assets/icons/48x48.png",
    "128": "assets/icons/128x128.png"
  },
  "action": {
    "default_title": "Trimly",
    "default_icon": {
      "16": "assets/icons/16x16.png",
      "32": "assets/icons/32x32.png",
      "48": "assets/icons/48x48.png"
    },
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "declarativeContent"
  ],
  "host_permissions": [
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": [
        "dist/page-inject.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "dist/page-script.js",
        ".dev",
        "assets/icons/16x16.png",
        "assets/icons/32x32.png",
        "assets/icons/48x48.png",
        "assets/icons/128x128.png",
        "assets/icons/512x512.png"
      ],
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ]
    }
  ]
}
